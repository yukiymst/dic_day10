<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<div class="row">
<table class="col-md-10 col-xs-10">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
      </tr>
      <tr>
        <td class="poci"><%= link_to 'Show', blog %></td>
        <td class="poci"><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td class="poci"><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>